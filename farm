local TeleportService = game:GetService("TeleportService")
local HttpService = game:GetService("HttpService")
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local PlaceId = game.PlaceId

-- Function to scan all Rifts and find x25 eggs
local function findLuck25()
    local rifts = workspace:FindFirstChild("Rendered") and workspace.Rendered:FindFirstChild("Rifts")
    if not rifts then return false end

    local found = 0
    local total = #rifts:GetChildren()

    for _, v in ipairs(rifts:GetChildren()) do
        local success, result = pcall(function()
            local display = v:FindFirstChild("Display")
            local gui = display and display:FindFirstChild("SurfaceGui")
            local icon = gui and gui:FindFirstChild("Icon")
            local luck = icon and icon:FindFirstChild("Luck")
            local timer = icon and icon:FindFirstChild("Timer")

            if luck and luck.Text:find("x25") then
                found += 1
                warn("✅ x25 Egg:", v.Name, "| Time left:", timer and timer.Text or "unknown")
            end
        end)
    end

    if found > 0 then
        print(string.format("🎉 Found %d x25 Eggs out of %d", found, total))
        if found == total then
            print("💯 All Rifts are x25!")
        end
        return true
    else
        return false
    end
end

-- ✅ Main logic
print("🔍 Scanning for Luck x25...")

if findLuck25() then
    print("🎯 Luck x25 detected. Script ends.")
    return
end

print("❌ No x25 found. Hopping to another server...")

-- Re-run this script on next join
queue_on_teleport("loadstring(game:HttpGet('https://raw.githubusercontent.com/Untix-Hub/1232/refs/heads/main/farm'))()")

-- Random hop
TeleportService:Teleport(PlaceId, LocalPlayer)
